#!/bin/sh

. ../sysdep-subs
if [ $? -ne 0 ]
then
  exit 111
fi

search="NO"

sys="`uname -s | tr '/:[A-Z]' '..[a-z]'`"
if [ x"$sys" != x ]
then
  case "$sys" in
  sunos)
    path="/usr/local/lib /usr/sfw/lib"
    lib="libpng.so"
    args="-lpng"
    search="YES"
    ;;
  *) ;;
  esac
fi

# for systems that don't have libpng-config
if [ "${search}" = "YES" ]
then
  search_header "${lib}" "${path}" "${args}"
  if [ $? -ne 0 ]
  then
    error "could not locate ${lib}"
  fi
  exit 0
fi

# default libpng-config system
flist=`libpng-config --ldflags`
err=$?
flags=""

if [ ${err} -ne 0 ]
then
  error "could not locate PNG libs"
  exit 0
else
  for f in ${flist}
  do
    flags="${flags} $f"
  done
  echo ${flags}
fi
