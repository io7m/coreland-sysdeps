#!/bin/sh

. ../sysdep-subs
if [ $? -ne 0 ]
then
  exit 111
fi

search="NO"
header="png.h"

sys="`uname -s | tr '/:[A-Z]' '..[a-z]'`"
if [ x"${sys}" != x ]
then
  case "${sys}" in
  sunos)
    path="/usr/local/include /usr/sfw/include "
    search="YES"
     ;;
  *) ;;
  esac
fi

# for systems that don't have libpng-config
if [ "${search}" = "YES" ]
then
  search_for "${header}" "${path}"
  if [ $? -ne 0 ]
  then
    fatal "could not locate ${header}"
  fi
  exit 0
fi

# default libpng-config system
flist=`libpng-config --I_opts --cppflags`
err=$?
flags=""

if [ ${err} -ne 0 ]
then
  fatal "could not locate libPNG includes"
fi

for f in ${flist}
do
  flags="${flags} $f"
done

echo ${flags}
