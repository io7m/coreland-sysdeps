#!/bin/sh

echo="/bin/echo -n"

fatal()
{
  echo "fatal: $1" 1>&2
  exit 111
}

sys="`uname -s | tr '/:[A-Z]' '..[a-z]'`"
if [ x"$sys" != x ]
then
  case "$sys" in
  *) ;;
  esac
fi

# default libpng-config system

flist=`libpng-config --I_opts --cppflags`
err=$?
flags=""

if [ ${err} -ne 0 ]
then
  fatal "could not locate libPNG includes"
fi

for f in ${flist}
do
  flags="${flags} $f"
done

echo ${flags}
