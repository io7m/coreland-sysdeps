#!/bin/sh

fatal()
{
  echo "fatal: $1" 1>&2
  exit 111
}

search_headers()
{
  header="$1"
  path="$2"

  for d in ${path}
  do
    if [ -f "${d}/${header}" ]
    then
      echo " -I${d} "
      return 0
    fi
  done

  # could not locate header
  return 1
}

search="NO"
header="png.h"

sys="`uname -s | tr '/:[A-Z]' '..[a-z]'`"
if [ x"$sys" != x ]
then
  case "$sys" in
  sunos)
    path="/usr/local/include /usr/sfw/include "
    search="YES"
     ;;
  *) ;;
  esac
fi

# for systems that don't have libpng-config
if [ "${search}" = "YES" ]
then
  search_headers "${header}" "${path}"
  if [ $? -ne 0 ]
  then
    fatal "could not locate ${header}"
  fi
  exit 0
fi

# default libpng-config system
flist=`libpng-config --I_opts --cppflags`
err=$?
flags=""

if [ ${err} -ne 0 ]
then
  fatal "could not locate libPNG includes"
fi

for f in ${flist}
do
  flags="${flags} $f"
done

echo ${flags}
