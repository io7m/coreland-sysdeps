#!/bin/sh

error()
{
  echo "error: $1" 1>&2
}

search_header()
{
  header="$1"
  path="$2"
  args="$3"

  for d in ${path}
  do
    if [ -f "${d}/${header}" ]
    then
      echo "-I${d} ${args}"
      return 0
    fi
  done

  # could not locate header
  return 1
}

search_lib()
{
  lib="$1"
  path="$2"
  args="$3"

  for d in ${path}
  do
    if [ -f "${d}/${lib}" ]
    then
      echo "-L${d} ${args}"
      return 0
    fi
  done

  # could not locate header
  return 1
}
