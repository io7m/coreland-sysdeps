#!/bin/sh

fatal()
{
  echo "fatal: $1" 1>&2
  exit 1
}

CONF_REPOS=`head -n 1 conf-repos`   || fatal "could not read conf-repos"
CONF_BINDIR=`head -n 1 conf-bindir` || fatal "could not read conf-bindir"

(
cat <<EOF
/*
 * Auto generated by make-insthier-h, do not edit.
 */

#ifndef INSTHIER_H
#define INSTHIER_H

#define CONF_REPOS  "${CONF_REPOS}"
#define CONF_BINDIR "${CONF_BINDIR}"

#endif
EOF
) || fatal "could not write header"
